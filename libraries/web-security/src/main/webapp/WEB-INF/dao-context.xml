<?xml version="1.0" encoding="UTF-8"?>
<!-- DATASOURCE DEFINITON-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
							http://www.springframework.org/schema/context
							http://www.springframework.org/schema/context/spring-context.xsd"
       >

	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost/jjwa" />
		<property name="username" value="root" />
		<property name="password" value="admin" />
	</bean>
	
	<!-- HIBERNATE CONFIGURATION -->
	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
        <property name="annotatedClasses">
            <list>
                <value>com.jsource.jjwa.domain.model.UserEntity</value>
                <value>com.jsource.jjwa.domain.model.RoleEntity</value>
                <value>com.jsource.jjwa.domain.model.PermissionEntity</value>
                <value>com.jsource.jjwa.domain.model.PermissionActionEntity</value>
            </list>
        </property>
        <!--<property name="packagesToScan">-->
            <!--<list>-->
                <!--<value>com.jsource.jjwa.domain.model.*</value>-->
            <!--</list>-->
        <!--</property>-->
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</prop>
                <prop key="hibernate.show_sql">true</prop>
                <prop key="hibernate.use_outer_join">true</prop>
                <prop key="hibernate.max_fetch_depth">1</prop>
                <prop key="hibernate.jdbc.batch_size">0</prop>
                <!--<prop key="hibernate.default_schema">richwebapp</prop>-->
                <!--<prop key="hibernate.hbm2ddl.auto">update</prop>-->
            </props>
        </property>
    </bean>

</beans>